# Core YouTube audit settings
YOUTUBE_API_KEY=your_api_key_here
MAX_VIDEOS=0
OUTPUT_FOLDER=.tmp/youtube_audits

# Flask app
APP_ENV=development
SECRET_KEY=change_me
DATABASE_URL=sqlite:///.tmp/coworker_audit.db
RETENTION_DAYS=180
AUTO_CREATE_SCHEMA=true

# Auth (local dev fallback)
DEV_AUTH_EMAIL=you@brainlabsdigital.com
IAP_AUDIENCE=

# Internal task security
ALLOW_INSECURE_INTERNAL=true
INTERNAL_TASK_AUDIENCE=
TASK_HANDLER_URL=http://localhost:8080/internal/tasks/run-audit

# Cloud Tasks (optional in local)
USE_CLOUD_TASKS=false
GOOGLE_CLOUD_PROJECT=
TASK_QUEUE_NAME=audit-jobs
TASK_QUEUE_LOCATION=us-central1
TASK_SERVICE_ACCOUNT_EMAIL=

# Artifact storage (local fallback)
USE_GCS=false
GCS_BUCKET=
LOCAL_ARTIFACT_DIR=.tmp/web_artifacts
